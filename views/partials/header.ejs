<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PupProof</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/CSS/homePage.css" />
    <link rel="stylesheet" href="/CSS/SignUp.css" />
  </head>

  <body>
    <header class="p-3 mb-4 border-bottom bg-light">
      <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <a href="/home">
            <img
              src="/assets/logo2.png"
              alt="PupProof Logo"
              class="logo me-2"
            />
          </a>
          <h3 class="m-0">PupProof</h3>
        </div>

        <nav class="d-flex justify-content-end gap-2">
          <% if (typeof user !=='undefined' && user) { %>
          <a href="/user/dashboard" class="btn btn-sm btn-outline-primary"
            >Dashboard</a
          >
          <a href="/user/logout" class="btn btn-sm btn-outline-danger"
            >Logout</a
          >
          <% } else if (typeof admin !=='undefined' && admin) { %>
          <a href="/admin/dashboard" class="btn btn-sm btn-outline-primary"
            >Admin Dashboard</a
          >
          <a href="/admin/logout" class="btn btn-sm btn-outline-danger"
            >Logout</a
          >
          <% } else { %>
          <a href="/user/login" class="btn btn-sm btn-outline-primary"
            >User Login</a
          >
          <a href="/admin/login" class="btn btn-sm btn-outline-secondary"
            >Admin Login</a
          >
          <% } %>
        </nav>
      </div>
    </header>
  </body>
</html>
