<% if (success.length > 0) { %>
  <div class="alert alert-success text-center"><%= success%></div>
<% } %>

<% if (wrong.length > 0) { %>
  <div class="alert alert-danger text-center"><%= wrong %></div>
<% } %>

<div class="text-center">
  <div class="card p-4">
    <img src="../assets/Logo.png" alt="PupProof Logo" class="logo">
    <h2 class="mb-3">🐾 PupProof</h2>
    <p class="text-muted">Upload dog's noseprint to identify them securely.</p>

    <form action="/home/fetchFood" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <input type="file" name="noseImage" class="form-control" accept="image/*" onchange="previewImage(event)"
          required>
      </div>
      <button type="submit" class="btn btn-upload">Upload Noseprint</button>
    </form>

    <div class="preview" id="preview">
      <h6 class="mt-3">Preview:</h6>
      <img id="preview-img" src="#" alt="Nose Preview">
    </div>
  </div>
</div>